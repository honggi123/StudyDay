<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#D6D6D6" />
            <corners android:radius="100dp" /> <!-- 모서리 기울기 -->
            <solid android:color="@color/white" /><!-- 배경색 -->
            <padding
                android:bottom="5dp"
                android:left="20dp"
                android:right="20dp"
                android:top="5dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape>
            <corners android:radius="100dp" /> <!-- 모서리 기울기 -->
            <solid android:color="@color/main_color" /><!-- 배경색 -->
            <padding
                android:bottom="3dp"
                android:left="7dp"
                android:right="4dp"
                android:top="3dp" />
        </shape>
    </item>
</selector>
