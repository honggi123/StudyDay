<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/whiteboard_layout_toolbar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/whiteboard_toolbar_background"
    app:titleTextColor="@color/white"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp"
>

    <ImageView
        android:id="@+id/whiteboard_toolbar_whiteboard"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:srcCompat="@drawable/whiteboard_icon" />

    <TextView
        android:id="@+id/whiteboard_toolbar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="화이트보드"
        android:textColor="#686868"
        android:textSize="16sp"
        android:textStyle="bold" />
    <View
        android:id="@+id/view8"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#D6D6D6"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <ImageView
        android:id="@+id/whiteboard_toolbar_redo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        app:srcCompat="@drawable/redo_icon" />

    <ImageView
        android:id="@+id/whiteboard_toolbar_undo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:visibility="visible"
        app:srcCompat="@drawable/undo_icon" />
    <View
        android:id="@+id/view7"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#D6D6D6"
        android:layout_marginRight="10dp"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <ImageView
        android:id="@+id/whiteboard_toolbar_zoom"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_baseline_zoom_in_24" />



</androidx.appcompat.widget.Toolbar>