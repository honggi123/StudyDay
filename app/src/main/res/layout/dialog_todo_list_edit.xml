<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backround_round"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/textView62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/under_line_gray"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:text="투두리스트 수정"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/dialog_todolist_edt__txt_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_baseline_edit_calendar_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="오늘"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/dialog_todolist_edt_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/edit_text_round"
        android:ems="10"
        android:hint="목표를 입력해주세요"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_backround_round"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_todolist_edt_btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_cancle"
            android:text="취소" />

        <Button
            android:id="@+id/dialog_todolist_edt_btn_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_logout"
            android:text="수정하기"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>