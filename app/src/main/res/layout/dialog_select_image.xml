<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_backround_round"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView61"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:text="이미지 선택"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/dialog_select_image_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_baseline_close_24" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/dialog_select_image_selet_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/contour"
            android:scaleType="centerCrop"
            tools:srcCompat="@color/contour" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/dialog_select_image_basic_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contour"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/dialog_select_image_basic_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contour"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/dialog_select_image_basic_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/contour"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_select_image_btn_image_Import"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/main_goal"
            android:text="이미지 불러오기"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialog_select_image_btn_pick_ok"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/main_goal"
            android:text="선택완료"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>